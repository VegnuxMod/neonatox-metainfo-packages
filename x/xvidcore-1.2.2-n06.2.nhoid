nbuild() {
cd build/generic
./configure --prefix=/usr
make
}

ninstall() {
cd build/generic
make install
cd /usr/lib
mylib=$(basename libxvidcore.so.*)
ln -sf ${mylib} libxvidcore.so.4
ln -sf ${mylib} libxvidcore.so
}

npostinstall() {
noemptyfuncs
}

npostremove() {
noemptyfuncs
}
