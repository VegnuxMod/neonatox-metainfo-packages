nbuild() {
./configure --prefix=/usr \
--libdir=/etc \
--mandir=/usr/share/man \
--with-app-defaults=/usr/share/X11/app-defaults/ \
--with-x \
--disable-full-tgetent \
--disable-imake \
--enable-ansi-color \
--enable-88-color \
--enable-256-color \
--enable-broken-osc \
--enable-broken-st \
--enable-load-vt-fonts \
--enable-i18n \
--enable-wide-chars \
--enable-doublechars \
--enable-warnings \
--enable-tcap-query \
--enable-logging \
--enable-dabbrev \
--enable-freetype \
--enable-luit \
--enable-mini-luit \
--enable-narrowproto \
--enable-exec-xterm \
--with-tty-group=tty
make
}

ninstall() {
make install
chmod 0755 /usr/bin/xterm
}

npostinstall() {
noemptyfuncs
}

npostremove() {
noemptyfuncs
}
