nbuild() {
ac_cv_path_LDCONFIG=/bin/true ./configure --prefix=/usr \
--with-fuse=external --disable-static
make
}

ninstall() {
make install
ln -s /bin/ntfs-3g "/sbin/mount.ntfs"
install -m755 -d "/usr/share/hal/fdi/policy/10osvendor"
install -m644 "../25-ntfs-config-write-policy.fdi" "/usr/share/hal/fdi/policy/10osvendor/"
}

npostinstall() {
noemptyfuncs
}

npostremove() {
noemptyfuncs
}
