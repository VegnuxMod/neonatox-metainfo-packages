nbuild() {
patch -Np1 -i ../30-urw-aliases.patch
export CFLAGS="${CFLAGS} -fPIC"
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
make
}

ninstall() {
make install
install -m644 ../29-replace-bitmap-fonts.conf /etc/fonts/conf.avail
rm -f /etc/fonts/conf.d/*.conf
}

npostinstall() {
noemptyfuncs
}

npostremove() {
noemptyfuncs
}
