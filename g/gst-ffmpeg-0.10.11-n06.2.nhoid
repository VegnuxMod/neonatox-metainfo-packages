nbuild() {
unset CFLAGS
unset CXXFLAGS
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static --with-ffmpeg-extra-configure="--enable-runtime-cpudetect"
make
}

ninstall() {
make install
rm -f /usr/lib/gstreamer-0.10/*.la
}

npostinstall() {
noemptyfuncs
}

npostremove() {
noemptyfuncs
}
