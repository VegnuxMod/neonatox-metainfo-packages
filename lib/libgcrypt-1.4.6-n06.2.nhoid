nbuild() {
./configure --prefix=/usr --disable-padlock-support
make
}

ninstall() {
make install
mv /usr/lib/libgcrypt.so* /lib/
ln -sf /lib/libgcrypt.so /usr/lib/libgcrypt.so
}

npostinstall() {
noemptyfuncs
}

