nbuild() {
./configure --prefix=/usr --enable-utf8 --enable-unicode-properties
make
}

ninstall() {
make install
mv /usr/lib/libpcre.so.* /lib/
ln -sf ../../lib/libpcre.so.0 /usr/lib/libpcre.so
}

npostinstall() {
noemptyfuncs
}

npostremove() {
noemptyfuncs
}
