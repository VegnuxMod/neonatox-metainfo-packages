nbuild() {
patch -Np1 -i ../python-2.7-db51.diff
sed -i "s/ndbm_libs = \[\]/ndbm_libs = ['gdbm', 'gdbm_compat']/" setup.py
./configure --prefix=/usr --enable-shared
make
}

ninstall() {
make DESTDIR=/tmp/python install
cp -r /tmp/python/* /
rm -r /tmp/python
}

npostinstall() {
noemptyfuncs
}

npostremove() {
noemptyfuncs
}
